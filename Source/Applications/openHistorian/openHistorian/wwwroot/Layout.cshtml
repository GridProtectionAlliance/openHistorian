    <script>
        $("#logoutButton").click(function() {
            if (!hubIsConnected)
                return;

            securityHub.logout(Cookies.get("@sessionToken")).done(function(success) {
                window.location = "@loginPage.JavaScriptEncode()?logout&sessionCleared=" + success;
            });
        });

        $("#logoutButton").show();
    </script>
