@using openHistorian.Model
@using RazorEngine.Templating
@inherits TemplateBase<AppModel>
@{ 
    Layout = "Layout.cshtml";
    ViewBag.Title = "Help";
}
<table class="table table-striped">
    <tr>
        <td style="vertical-align: middle">
            <img src="/Images/openHistorianBanner.png" alt="openHistorian Banner" />
        </td>
        <td>
            <div><a id="Roles"></a><i><b>User Roles:</b></i></div>
            <div>
                <b>Administrator</b> - Information Technology personnel authorized to establish users and roles and set application specific configuration parameters.
            </div>
            <div>
                <b>Editor</b> - Professional staff within the organization charged with making maintaining common system configuration.
            </div>
            <div>
                <b>Viewer</b> - Users that can view the status of the system but cannot make any changes within the system.
            </div>
            <div>
                <b>GrafanaAdmin</b> - Users that can change and access system-wide settings in the Grafana system. This role only affects Grafana.
            </div>
        </td>
    </tr>
    <tr style="height: 150px; border: none">
        <td colspan="2">&nbsp;</td>
    </tr>
</table>
